{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": "./",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "typeRoots": [
    "node_modules/@types",
    "src/types"
  ],
  "include": [
    "./src/**/*.tsx",
    "src/types/images.d.ts"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
}